<h1>THE WAYPOINT Test Referral</h1>
<h2>Use to augment TWP - admin - USERS view  </h2>

<table>
  <tr>
    <th>Name | </th>
    <th>Address | </th>
    <th>Image url |</th>
    <th>Referred by user | </th>
    <th>Referred | </th>
    <th> | </th>
    <th>Your referral code</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= link_to user.name, user %></td>
    <td><%= user.address %></td>
    <td><%= user.image_url %></td>
    <td><%=link_to user.referred_by_user.name, user_path(user.referred_by_user) if user.referred_by_user %></td>
    <td><%=link_to "referral", my_referral_path(user.my_referral_object) if user.my_referral_object  %></td>
    <td></td>
    <td><%= user.referral_code %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

