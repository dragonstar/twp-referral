<h1>Listing users</h1>

<table>
  <tr>
    <th>Name | </th>
    <th>Address | </th>
    <th>Image url |</th>
    <th>Referred by user | </th>
    <th>Referred users | </th>
    <th>Referral | </th>
    <th>Your referral code</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.address %></td>
    <td><%= user.image_url %></td>
    <td><%=link_to user.referred_by_user.name, user_path(user.referred_by_user) if user.referred_by_user %></td>
    <td></td>
    <td></td>
    <td><%= user.referral_code %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

